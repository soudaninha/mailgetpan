<div class="container">
    <h1>Sending E-mail</h1>
    <form action="/sending" method='POST'>
        <!--메소드는 대문자로 쓰는 것이 // 우리가 쓴 글의 내용이 안보여요 -->
        
        <div class="form-group">
        <label for="exampleInputEmail1">제목</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="메일의 제목을 써주세요">
      </div>
      
      <div class="form-group">
        <label for="exampleInputEmail1">받는사람</label>
        <input name="email" type="text" class="form-control" id="email" placeholder="받는 사람의 이메일을 써주세요">
      </div>
      
        
        <div class="form-group">
            <label for="content">내용</label>
            <textarea name="content" class="form-control" rows="5" id="comment" placeholder="메일의 내용을 써주세요"></textarea>
        </div>
      <button type="submit" class="btn btn-default">보내기</button>
    </form>
</div>